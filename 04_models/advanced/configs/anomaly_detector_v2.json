{
  "model_name": "anomaly_detector",
  "version": "2.2",
  "architecture": {
    "type": "Autoencoder-Anomaly",
    "encoder": {
      "input_shape": [625, 13],
      "layers": [
        {"type": "Dense", "units": 256, "activation": "relu"},
        {"type": "Dense", "units": 128, "activation": "relu"},
        {"type": "Dense", "units": 64, "activation": "relu"}
      ]
    },
    "decoder": {
      "layers": [
        {"type": "Dense", "units": 128, "activation": "relu"},
        {"type": "Dense", "units": 256, "activation": "relu"},
        {"type": "Dense", "units": 8125, "activation": "sigmoid"}
      ]
    },
    "classifier_head": {
      "layers": [
        {"type": "Dense", "units": 32, "activation": "relu"},
        {"type": "Dense", "units": 3, "activation": "softmax"}
      ]
    }
  },
  "training": {
    "phase_1": {
      "type": "unsupervised",
      "optimizer": "adam",
      "learning_rate": 0.001,
      "batch_size": 64,
      "epochs": 50,
      "loss": "mse"
    },
    "phase_2": {
      "type": "supervised_fine_tuning",
      "optimizer": "adam",
      "learning_rate": 0.0001,
      "batch_size": 32,
      "epochs": 50,
      "loss": "categorical_crossentropy"
    }
  },
  "anomaly_threshold": 0.15,
  "target_metrics": {
    "accuracy": 0.87,
    "false_positive_rate": 0.05,
    "latency_ms": 40,
    "memory_kb": 250
  }
}

